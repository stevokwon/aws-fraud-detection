{
    "name": "airflow-dev",
    "image": "python:3.11-slim",
    "features": {},
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "python.envFile": "${workspaceFolder}/.env"
            }
        }
    },
    "runArgs": [
        "--env-file", ".env"
    ],
    "remoteUser": "vscode"
}
